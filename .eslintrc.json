{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"plugin:prettier/recommended"
	],
	"rules": {
		"@typescript-eslint/semi": "warn",
		"eqeqeq": "warn",
		"no-throw-literal": "warn",
		"semi": "off",
		"prettier/prettier": "warn"
	},
	"ignorePatterns": [
		"dist",
		"**/*.d.ts"
	]
}
